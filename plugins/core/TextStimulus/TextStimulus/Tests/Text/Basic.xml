<?xml version="1.0" standalone="no"?>
<monkeyml version="1.0">
    <io_devices tag="IO Devices"></io_devices>
    <variables tag="Variables">
        <variable tag="text" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="&quot;Hello, world! How y'all doing?&quot;" type="any"></variable>
        <variable tag="font_name" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="&quot;Marker Felt&quot;" type="any"></variable>
        <variable tag="font_size" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="24" type="any"></variable>
        <variable tag="red" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="1" type="any"></variable>
        <variable tag="green" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="1" type="any"></variable>
        <variable tag="blue" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="1" type="any"></variable>
        <variable tag="x_size" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="15" type="any"></variable>
        <variable tag="y_size" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="4" type="any"></variable>
        <variable tag="x_pos" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="-5" type="any"></variable>
        <variable tag="y_pos" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="-5" type="any"></variable>
        <variable tag="rotation" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="0" type="any"></variable>
        <variable tag="alpha" scope="global" logging="when_changed" exclude_from_data_file="NO" default_value="1" type="any"></variable>
    </variables>
    <sounds tag="Sounds"></sounds>
    <stimuli tag="Stimuli">
        <stimulus type="rectangle" tag="rect" color="0.25, 0.25, 0.25" x_size="x_size" y_size="y_size" x_position="x_pos" y_position="y_pos" rotation="rotation" alpha_multiplier="1"></stimulus>
        <stimulus type="text" tag="text" text="text" font_name="font_name" font_size="font_size" color="red, green, blue" x_size="x_size" y_size="y_size" x_position="x_pos" y_position="y_pos" rotation="rotation" alpha_multiplier="alpha"></stimulus>
    </stimuli>
    <filters tag="Filters"></filters>
    <optimizers tag="Optimizers"></optimizers>
    <experiment tag="New Experiment" full_name="" description="">
        <protocol tag="New Protocol" nsamples="1" sampling_method="cycles" selection="sequential" interruptible="YES">
            <action tag="Live queue rect" type="live_queue_stimulus" stimulus="rect"></action>
            <action tag="Live queue text" type="live_queue_stimulus" stimulus="text"></action>
            <action tag="Update display" type="update_stimulus_display" predicted_output_time=""></action>
            <action type="wait" tag="Wait" duration="1.0" duration_units="s"></action>
            <action type="assignment" tag="Change text" variable="text" value="&quot;Greetings, world! How are you today?&quot;"></action>
            <action tag="Update display" type="update_stimulus_display" predicted_output_time=""></action>
            <action type="wait" tag="Wait" duration="1.0" duration_units="s"></action>
            <action type="assignment" tag="Change font_name" variable="font_name" value="&quot;Helvetica&quot;"></action>
            <action tag="Update display" type="update_stimulus_display" predicted_output_time=""></action>
            <action type="wait" tag="Wait" duration="1.0" duration_units="s"></action>
            <action type="assignment" tag="Change font_size" variable="font_size" value="48"></action>
            <action tag="Update display" type="update_stimulus_display" predicted_output_time=""></action>
            <action type="wait" tag="Wait" duration="1.0" duration_units="s"></action>
            <action type="assignment" tag="Change red" variable="red" value="0"></action>
            <action tag="Update display" type="update_stimulus_display" predicted_output_time=""></action>
            <action type="wait" tag="Wait" duration="1.0" duration_units="s"></action>
            <action type="assignment" tag="Change green" variable="green" value="0"></action>
            <action tag="Update display" type="update_stimulus_display" predicted_output_time=""></action>
            <action type="wait" tag="Wait" duration="1.0" duration_units="s"></action>
            <action type="assignment" tag="Change blue" variable="blue" value="0"></action>
            <action tag="Update display" type="update_stimulus_display" predicted_output_time=""></action>
            <action type="wait" tag="Wait" duration="1.0" duration_units="s"></action>
            <action type="assignment" tag="Change x_size" variable="x_size" value="2*x_size"></action>
            <action tag="Update display" type="update_stimulus_display" predicted_output_time=""></action>
            <action type="wait" tag="Wait" duration="1.0" duration_units="s"></action>
            <action type="assignment" tag="Change y_size" variable="y_size" value="0.5*y_size"></action>
            <action tag="Update display" type="update_stimulus_display" predicted_output_time=""></action>
            <action type="wait" tag="Wait" duration="1.0" duration_units="s"></action>
            <action type="assignment" tag="Change x_pos" variable="x_pos" value="1"></action>
            <action tag="Update display" type="update_stimulus_display" predicted_output_time=""></action>
            <action type="wait" tag="Wait" duration="1.0" duration_units="s"></action>
            <action type="assignment" tag="Change y_pos" variable="y_pos" value="3"></action>
            <action tag="Update display" type="update_stimulus_display" predicted_output_time=""></action>
            <action type="wait" tag="Wait" duration="1.0" duration_units="s"></action>
            <action type="assignment" tag="Change rotation" variable="rotation" value="45"></action>
            <action tag="Update display" type="update_stimulus_display" predicted_output_time=""></action>
            <action type="wait" tag="Wait" duration="1.0" duration_units="s"></action>
            <action type="assignment" tag="Change alpha" variable="alpha" value="0.2"></action>
            <action tag="Update display" type="update_stimulus_display" predicted_output_time=""></action>
            <action type="wait" tag="Wait" duration="1.0" duration_units="s"></action>
        </protocol>
    </experiment>
</monkeyml>