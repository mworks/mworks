<MWElements>
    <MWElement name="White Noise Background">
        <match_signature>stimulus[@type="white_noise_background"]</match_signature>
        
        <isa>Stimulus</isa>
        
        <description>
            White noise background stimulus
        </description>
        
        <code>
            <stimulus type="white_noise_background"
                      tag="White Noise Background"
                      grayscale="YES"
                      grain_size="0.0"
                      rand_seed=""
                      randomize_on_draw="NO"
                      />
        </code>
    </MWElement>
    <MWElement name="Randomize Background">
		<match_signature>action[@type="randomize_background"]</match_signature>

		<isa>Action</isa>
		
		<description>
			Re-randomize a white noise background stimulus
        </description>
		
		<code>
			<action type="randomize_background" tag="Randomize background" stimulus=""/>
        </code>
    </MWElement>
</MWElements>
